@model IEnumerable<Movie>
@{
    ViewData["Title"] = "List of Movies";
}

<div class="row">
    @foreach (var Model in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px; height: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.Title
                                    <a class="text-white float-right"><i class="bi bi-pencil-square"></i></a>
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <td class="align-middle">
                            <head>
                                <style>
                                    img {
                                        border-radius: 2px;
                                    }
                                </style>
                            </head>
                            <body>
                                <img src="@Model.ImageURL" style=" width:240px; height:400px;" alt="@Model.Title">
                            </body>
                        </td>

                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text" style="max-width:100%; max-height:150px; word-wrap:break-word; overflow:hidden;">@Model.Description </p>
                            <p class="card-text"><b>Cinema: </b>@Model.Cinema.CinemaName</p>
                            <p class="card-text"><b>Category: </b>@Model.MovieCategory</p>
                            <p class="card-text"><b>Start Date: </b>@Model.StartDate.ToString("dd MMM yy")</p>
                            <p class="card-text"><b>End Date: </b>@Model.EndDate.ToString("dd MMM yy")</p>
                            <p class="card-text ">
                                <b>Status: </b>
                                @if (DateTime.Now >= Model.StartDate && DateTime.Now <= Model.EndDate)
                                {
                                    <span class="badge bg-success text-white">AVAILABLE</span>
                                }
                                else if (DateTime.Now > Model.EndDate)
                                {
                                    <span class="badge bg-danger text-white">EXPIRED</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-white">UPCOMING</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-lg-end" asp-action="Details" asp-route-id="@Model.Id"><i class="bg-info bi-eye-fill"></i> Show Details </a>
                                <a class="btn btn-success float-lg-start text-white"><i class="bi bi-cart-plus"></i> Add to Cart ($@Model.Price)</a>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    }

</div>
