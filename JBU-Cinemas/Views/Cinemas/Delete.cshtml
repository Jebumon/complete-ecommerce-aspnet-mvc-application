@model Cinema

@{
    ViewData["Title"] = "Delete cinema";
}
<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete confirmation for @Model.CinemaName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               
                   
                    <div class="form-group text-center">
                    <td class="align-middle">
                            <head>
                                <style> img {border-radius: 8px;stroke-width:3px;} </style>
                            </head>
                                <body>
                                    <img  id="CinemaLogoPreview" style="width:150px; height:200px">
                                </body>
                        </td>
                    
                </div>
                
                <div class="form-group">
                    <label asp-for="LogoURL" style="padding: 5px 5px 5px 5px;" class="control-label"></label>
                    <input asp-for="LogoURL" class="form-control" readonly />
                    <span asp-validation-for="LogoURL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CinemaName" style="padding: 5px 5px 5px 5px;" class="control-label"></label>
                    <input asp-for="CinemaName" class="form-control" readonly />
                    <span asp-validation-for="CinemaName" class="text-danger"></span>
                </div>
                <div  class="form-group">
                    <label asp-for="Description" style="padding: 5px 5px 5px 5px;" class="control-label"></label>
                    <input asp-for="Description" class="form-control" readonly />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div style="padding: 10px 5px 5px 5px;" class="form-group" >
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                        <input type="submit" value="Confirm" class="btn btn-danger float-end"/>
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

        $(document).ready(function() {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#LogoURL").val();
        })
    </script>
}